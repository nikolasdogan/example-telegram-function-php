        $token = '111111111:sdiflsdifdlsiflilifsdlfisdlÅŸfi'; // token_telegram_group
        $user_id = -00000000000; // users_telegram_id
       //ATS-CRM Telegram Grup a basar $user_id = '-00000000' 
